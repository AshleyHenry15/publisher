{
  "extends": [
    "@tsconfig/node20/tsconfig.json",
    "@vue/tsconfig/tsconfig.dom.json"
  ],
  "include": [
    "src/**/*",
    "src/**/*.vue",
    "index.d.ts" // declaration file path],
  ],
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "src/*": ["./src/*"]
    },
    "verbatimModuleSyntax": false,
    "types": ["@types/vscode-webview"]
  }
}
